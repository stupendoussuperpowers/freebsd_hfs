#!/bin/sh

build() {
    kldunload /usr/obj/sharedcode/hfs.ko
    mkdir -p /usr/obj/sharedcode/hfsplus
    make clean && make obj && make
}

load() {
    kldload /usr/obj/sharedcode/hfs.ko
}

test_mount() {
    mount -t hfs -o hfs_uid=1000,hfs_gid=1000 /dev/md10 /hello
}

default() {
    echo "<---Building--->"
    build 
    echo "<---Loading kmod--->"
    load 
    echo "<---Testing mount--->"
    test_mount 
}

if [ $# -eq 0 ]; then
    default
else
    "$@"
fi
